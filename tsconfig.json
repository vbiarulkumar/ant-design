{
  "compilerOptions": {
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true, 
    "declaration": false, 
    "noImplicitReturns": false,
    "removeComments": true, 
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ]
}
